gris_oscuro = #44
gris_texto = #7A7A7A
azul = #22BCE0
naranja = #DD4F24

a
  color naranja
body
  background #E8E8E8
  color gris_oscuro
  font-family Arial
  font-size 16px

header
  background gris_oscuro
  box-shadow 0 5px 0 rgba(0,0,0,0.2)
  color white
  padding 0.5em
  overflow hidden
  position relative
  z-index 1


  .logo
    border-right 1px solid azul
    float left
    width 60px

    img
      width 50px

  .titular
    margin 0px 60px 0px 70px

    .titulo
      font-size 18px
      font-wight normal
      margin 0px
      padding 0px

    .filtro
      color azul
      font-size 14px
      font-weight bold
      font-style italic
      text-decoration none

    .publicar
      background naranja
      color white
      float right
      padding 0.2em 0.5em
      margin -2px 1em 0 0
      font-style italic
      text-decoration none
      text-shadow 1px 1px 0px black

  .usuario
    position absolute
    right 0
    top 0

    .avatar
      margin 0 1em 0 0
      position relative
      z-index 2
      img
        width 50px
        border-radius 50%
        padding 0 0 0 0

    .flechita
      background naranja
      color white
      display block
      position absolute
      padding 1px
      right 0
      top 30px
      text-align right
      width 50%
nav
  background azul
  border-left 15px solid white
  position relative
  /*Estilo a flechita blanca en el nav*/
  &:before
    border-bottom 20px solid transparent
    border-left 7px solid white
    border-top 20px solid transparent
    content ""
    position absolute
    top 0
    left 0

  .menu
    padding 0
    height 40px
    line-height 40px
    margin 0
    overflow-x auto
    white-space nowrap
    li
      display inline-block
      a
        color white
        display inline-block
        margin 0 0.5em
        padding 0 0.2em
        text-decoration none

.posts
  padding 0.5em
  .post
    background white
    border-radius 0 0 0.5em 0.5em
    color gris_texto
    /*Sombra a la caja contenedora del post*/
    box-shadow 2px 2px 10px rgba(black, 0.5)

    .acciones
      border-top 3px solid azul
      padding 0.5em

    .descripcion
      color gris_texto

      .titulo
        color gris_oscuro
        font-size 18px
        font-style italic
        margin 0
        padding 0.5em 0.5em 0 0

      .imagen
        float left

        img
          height 160px
          vertical-align top
          width 120px



.right
  float right
.left
  float left
