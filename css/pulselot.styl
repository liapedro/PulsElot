gris_oscuro = #44
gris_texto = #7A7A7A
azul = #22BCE0
naranja = #DD4F24

@font-face {
  font-family: 'iconitos';
  src:  url('../fonts/icomoon.eot?66qip4');
  src:  url('../fonts/icomoon.eot?66qip4#iefix') format('embedded-opentype'),
    url('../fonts/icomoon.ttf?66qip4') format('truetype'),
    url('../fonts/icomoon.woff?66qip4') format('woff'),
    url('../fonts/icomoon.svg?66qip4#icomoon') format('svg');
  font-weight: normal;
  font-style: normal;
}

a
  color naranja
body
  background #E8E8E8
  color gris_oscuro
  font-family Arial
  font-size 16px

footer
  background naranja
  color rgba(white,0.5)
  padding 1em 0
  text-align center
  width 100%

  h3
    font-size 14px
    font-weight normal

    strong
      display block

    .rojascorona
      &:before
      &:after
        content "-"

header
  background gris_oscuro
  box-shadow 0 5px 0 rgba(0,0,0,0.2)
  color white
  padding 0.5em
  overflow hidden
  position relative
  z-index 1


  .logo
    border-right 1px solid azul
    float left
    width 60px

    img
      width 50px

  .titular
    margin 0px 60px 0px 70px

    .titulo
      font-size 18px
      font-wight normal
      margin 0px
      padding 0px

    .filtro
      color azul
      font-size 14px
      font-weight bold
      font-style italic
      text-decoration none

    .publicar
      background naranja
      color white
      float right
      padding 0.2em 0.5em
      margin -2px 1em 0 0
      font-style italic
      text-decoration none
      text-shadow 1px 1px 0px black

      &:before
        display inline-block
        font-family "iconitos"
        content "\e908"
        margin 0 3px 0 0

  .usuario
    position absolute
    right 0
    top 0

    .avatar
      margin 0 1.1em 0 0
      position relative
      z-index 2

      img
        width 50px
        border-radius 50%

    .flechita
      background naranja
      color white
      display block
      padding 3px
      position absolute
      right 0
      top 15px
      text-align right
      text-decoration none
      width 50%
      z-index 0

      &:after
        content "\ea43"
        display inline-block
        font-family "iconitos"
        text-shadow 1px 1px 0px black
nav
  background azul
  border-left 15px solid white
  position relative
  /*Estilo a flechita blanca en el nav*/
  &:before
    border-bottom 20px solid transparent
    border-left 7px solid white
    border-top 20px solid transparent
    content ""
    position absolute
    top 0
    left 0

  .menu
    padding 0
    height 40px
    line-height 40px
    margin 0
    overflow-x auto
    white-space nowrap
    li
      display inline-block
      a
        color white
        display inline-block
        margin 0 0.5em
        padding 0 0.2em
        text-decoration none

.posts

  padding 0.5em
  .post
    background white
    border-radius 0 0 0.5em 0.5em
    color gris_texto
    /*Sombra a la caja contenedora del post*/
    box-shadow 2px 2px 10px rgba(black, 0.5)
    margin-bottom 1em

    .acciones
      border-top 3px solid azul
      padding 0.5em
      overflow hidden

      .datos
        float right

        .comentarios
          background gris_oscuro
          border-radius 3px
          color white
          margin 0 1em 0 0
          padding 2px 5px
          text-decoration none

        .estrellita
          text-decoration none
          &:before
            font-family "iconitos"
            color naranja
            content "\e9d9"

      .votos
        float left

        .down
        .up
          vertical-align bottom
          text-decoration none

        .down
          color red
          &:before
            font-family "iconitos"
            font-size 1em
            content "\ea43"

        .up
          color green
          &:before
            font-family "iconitos"
            font-size 1em
            content "\ea41"

    .descripcion
      color gris_texto
      .detalles
        height 160px
        margin-left 130px

        .autor
          margin 0.5em 0 2em 0

        .fecha
          float right
          margin 0 1em 0 0

        .tag /**/
          background azul
          border-radius 0.5em
          color white
          padding 0.2em 0.5em
          text-decoration none

        .titulo
          color gris_oscuro
          font-size 18px
          font-style italic
          margin 0
          padding 0.5em 0.5em 0 0

      .imagen
        float left

        img
          height 120px
          vertical-align top
          width 80px



.right
  float right
.left
  float left

@media screen and (min-width: 768px)/*Imprimir la informaci√≥n en diferentes pantallas*/
  header
    .titular
      .publicar
        padding-left 3em
        position relative

        &:before
          left 0px
          font-size 2.5em
          position absolute
          top -10px


  .posts
    .post
      display inline-block
      width 46%
      vertical-align top
      &:nth-child(odd) /*Aplicar estilo a los elementos impar (odd) o par (even)*/
        margin-right 2%
